# vim: filetype=neomuttrc
## my Caltech 

# receive options
set spoolfile 	= "+Caltech/INBOX"
set mbox 	= "+Caltech/Archive"
set postponed 	= "+Caltech/Drafts"
set trash 	= "+Caltech/Deleted\ Items"

unmailboxes *
mailboxes +Caltech/INBOX +Caltech/Archive "+Caltech/Sent\ Items" "+Caltech/Deleted\ Items" +Caltech/Drafts

# send options
set sendmail 	= "/usr/bin/msmtp -a Caltech"
set from 	= "kgunst@caltech.edu"
set realname 	= "Klaas Gunst"

#set record 	= "+Caltech/Sent\ Items"
# Otherwise msmtp makes a duplicate
set record 	= "/dev/null"

macro index S ":set confirmappend=no delete=yes\n<tag-prefix-cond><save-message>$mbox\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"
macro index A ":set confirmappend=no delete=yes\n<save-message>$mbox\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"
