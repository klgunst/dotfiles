set default-bg "#282828"
set statusbar-bg "#a8a19f"
# set statusbar-fg "ebdbb2"

set statusbar-h-padding 0
set statusbar-v-padding 10 
set font "monospace normal 14"
set page-padding 10

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

map <C-p> feedkeys ":exec toclipboard $FILE<Return>"
