#!/bin/bash

answer=$(echo -e "purvena\nhpc\ncalana\nCancel" | dmenu -i -p "Select cluster to connect with" -fn 'inconsolata-LGC:size=20')

if [ "$answer" == "purvena" ] || [ "$answer" == "calana" ]; then
    if [ "x$(pgrep vpnc)" = "x" ]; then 
	pass work/UGent | xargs -n1 sudo vpnstart.exp
    fi 
    startssh $answer
elif [ "$answer" == "hpc" ]; then
    startssh $answer
fi
