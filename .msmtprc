defaults
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account UGent
host smtp.ugent.be
from klaas.gunst@ugent.be
user kgunst
passwordeval  "gpg2 --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/offlineimap/ugent.gpg"

account hotmail
host smtp-mail.outlook.com
from klaasgunst@hotmail.com
user klaasgunst@hotmail.com
passwordeval  "gpg2 --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/offlineimap/hotmail.gpg"

account default : UGent
